---
import { Image } from "astro:assets";
import Gradiend from "/src/images/Gradient Hero.png";
---

<div
  class="main-container relative py-8 z-0 bg-princeton_orange-600 flex flex-col items-center justify-center"
>
  <div class="noisy">
    <div class="max-w-screen-lg">
      <slot />
    </div>
  </div>
</div>

<style>
  .main-container {
    --shadow-color: 26deg 49% 46%;
    --shadow-elevation-low: 0.2px 0.2px 0.3px hsl(var(--shadow-color) / 0.3),
      0.2px 0.4px 0.5px -1.3px hsl(var(--shadow-color) / 0.3),
      0.6px 0.9px 1.2px -2.5px hsl(var(--shadow-color) / 0.3);
    --shadow-elevation-medium: 0.2px 0.2px 0.3px hsl(var(--shadow-color) / 0.32),
      0.5px 0.8px 1.1px -0.8px hsl(var(--shadow-color) / 0.32),
      1.2px 1.9px 2.5px -1.7px hsl(var(--shadow-color) / 0.31),
      2.9px 4.6px 6.1px -2.5px hsl(var(--shadow-color) / 0.31);
    --shadow-elevation-high: 0.2px 0.2px 0.3px hsl(var(--shadow-color) / 0.3),
      0.8px 1.2px 1.6px -0.4px hsl(var(--shadow-color) / 0.29),
      1.5px 2.3px 3.1px -0.7px hsl(var(--shadow-color) / 0.29),
      2.4px 3.8px 5px -1.1px hsl(var(--shadow-color) / 0.29),
      3.8px 6px 7.9px -1.5px hsl(var(--shadow-color) / 0.29),
      6px 9.5px 12.6px -1.8px hsl(var(--shadow-color) / 0.29),
      9.1px 14.4px 19px -2.2px hsl(var(--shadow-color) / 0.29),
      13.4px 21.2px 28px -2.5px hsl(var(--shadow-color) / 0.29);

    background: radial-gradient(
        closest-side at 30% 74%,
        rgba(255, 172, 55, 0.5) 0%,
        #ffac3800 100%
      ),
      radial-gradient(
        closest-side at 66% 30%,
        rgba(255, 172, 55, 0.5) 0%,
        #0000ff00 100%
      ),
      linear-gradient(
        to top,
        rgba(255, 172, 55, 0.5) 0%,
        rgba(255, 151, 5, 0.5) 14%,
        rgba(237, 111, 33, 0.5) 63%,
        rgba(255, 172, 55, 0.5) 100%
      );

    &::before,
    &::after {
      content: "";
      width: 100%;
      height: 60px;
      position: absolute;
      background-image: url(/public/separateur.png);
      background-repeat: repeat;
      background-size: 310px;
      opacity: 0.5;
      z-index: -1;
    }

    &::before {
      top: -60px;
      left: 0;
    }

    &::after {
      bottom: -60px;
      right: 0;
      transform: rotate(180deg);
    }
  }

  .noisy::after {
    filter: brightness(0.76);
  }
</style>
