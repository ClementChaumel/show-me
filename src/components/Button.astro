---
interface Props {
  appearance: "primary" | "secondary" | "white";
  href: string;
  class?: string;
}

const { href, appearance, ...props } = Astro.props;
---

<a href={href} class:list={[`${appearance}`, props.class]} {...props}>
  <slot />
</a>

<style>
  a {
    cursor: pointer;
    padding: 0.5rem 1rem;
    font-family: "VogueExtraBold";
    border-radius: 5px;
    letter-spacing: -0.025em;
    transition: background-color 0.2s ease-in-out;

    &.primary {
      position: relative;
      z-index: 0;
      background-color: #3d0eaf;
      color: white;

      &:hover {
        background-color: #320b8c;
      }

      &::after {
        content: "";
        z-index: 0;
        position: absolute;
        height: 100%;
        width: 100%;
        bottom: 0;
        left: 0;
        border-radius: 5px;

        background-image: url(/public/noise.png);
        background-repeat: repeat;
        background-size: 210px;
      }
    }

    &.secondary {
      position: relative;
      z-index: 0;
      background-color: #ffffff40;
      color: #3d0eaf;
      border: 1px solid #3d0eaf;

      &:hover {
        background-color: #ffffff;
      }

      &::after {
        content: "";
        z-index: 0;
        position: absolute;
        height: 100%;
        width: 100%;
        bottom: 0;
        left: 0;
        border-radius: 5px;

        background-image: url(/public/noise.png);
        background-repeat: repeat;
        background-size: 210px;
      }
    }

    &.white {
      color: #3d0eaf;
      background-color: white;

      &:hover {
        background-color: #ffffff80;
      }
    }
  }
</style>
