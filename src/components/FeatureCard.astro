---
import { Icon } from "astro-icon/components";

interface Props {
  title: string;
  body: string;
  href: string;
  icon: string;
}

const { href, title, body, icon } = Astro.props;
---

<div
  class="flex flex-col gap-4 p-6 rounded-3xl bg-white bg-opacity-30 border border-white border-opacity-25 glass shadow-medium"
>
  <div
    class="flex items-center gap-4 bg-white bg-opacity-30 border border-white border-opacity-25 rounded-xl p-3 relative -top-10"
  >
    <Icon name={icon} class="size-10" />
    <h3 class="text-2xl text-feldgrau-200 font-bold">{title}</h3>
  </div>
  <p>{body}</p>
  <a href={href} class="text-feldgrau-200">En savoir plus</a>
</div>
