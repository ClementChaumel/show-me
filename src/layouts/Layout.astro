---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>
<style is:global>
  @font-face {
    font-family: "Felix";
    src: url("/fonts/CupheadFelix-Regular-merged.ttf") format("truetype");
    font-weight: normal;
    font-style: normal;
    font-display: swap;
  }
  @font-face {
    font-family: "Henriette";
    src: url("/fonts/CupheadHenriette-A-merged.ttf") format("truetype");
    font-weight: normal;
    font-style: normal;
    font-display: swap;
  }
  @font-face {
    font-family: "Memphis";
    src: url("/fonts/CupheadMemphis-Medium-merged.ttf") format("truetype");
    font-weight: normal;
    font-style: normal;
    font-display: swap;
  }
  @font-face {
    font-family: "Poster";
    src: url("/fonts/CupheadPoster-Regular(Cyr_Lat_English).ttf")
      format("truetype");
    font-weight: normal;
    font-style: normal;
    font-display: swap;
  }
  @font-face {
    font-family: "VogueBold";
    src: url("/fonts/CupheadVogue-Bold-merged.ttf") format("truetype");
    font-weight: bold;
    font-style: normal;
    font-display: swap;
  }
  @font-face {
    font-family: "VogueExtraBold";
    src: url("/fonts/CupheadVogue-ExtraBold-merged.ttf") format("truetype");
    font-weight: bolder;
    font-style: normal;
    font-display: swap;
  }

  .felix {
    font-family: "Felix", sans-serif;
    font-family: Felix, sans-serif;
  }
  .henriette {
    font-family: "Henriette", sans-serif;
  }
  .memphis {
    font-family: "Memphis", sans-serif;
  }
  .poster {
    font-family: "Poster", sans-serif;
  }
  .vogue {
    font-family: "VogueBold", sans-serif;
  }
  .display {
    font-family: "VogueExtraBold", sans-serif;
  }

  .noisy {
    &::after {
      content: "";
      z-index: -1;
      position: absolute;
      height: 100%;
      width: 100%;
      bottom: 0;
      left: 0;
      background-image: url(/public/noise.png);
      background-repeat: repeat;
      background-size: 210px;
    }
  }

  .glass {
    backdrop-filter: blur(9px) saturate(104%);
    -webkit-backdrop-filter: blur(9px) saturate(104%);
    background-color: rgba(255, 255, 255, 0.5);
  }

  :root {
    --accent: 136, 58, 234;
    --accent-light: 224, 204, 250;
    --accent-dark: 49, 10, 101;
    --accent-gradient: linear-gradient(
      45deg,
      rgb(var(--accent)),
      rgb(var(--accent-light)) 30%,
      white 60%
    );

    --shadow-color: 258deg 100% 21%;
    --shadow-elevation-low: 0.2px 0.2px 0.3px hsl(var(--shadow-color) / 0.3),
      0.2px 0.4px 0.5px -1.3px hsl(var(--shadow-color) / 0.3),
      0.6px 0.9px 1.2px -2.5px hsl(var(--shadow-color) / 0.3);
    --shadow-elevation-medium: 0.2px 0.2px 0.3px hsl(var(--shadow-color) / 0.32),
      0.5px 0.8px 1.1px -0.8px hsl(var(--shadow-color) / 0.32),
      1.2px 1.9px 2.5px -1.7px hsl(var(--shadow-color) / 0.31),
      2.9px 4.6px 6.1px -2.5px hsl(var(--shadow-color) / 0.31);
    --shadow-elevation-high: 0.2px 0.2px 0.3px hsl(var(--shadow-color) / 0.3),
      0.8px 1.2px 1.6px -0.4px hsl(var(--shadow-color) / 0.29),
      1.5px 2.3px 3.1px -0.7px hsl(var(--shadow-color) / 0.29),
      2.4px 3.8px 5px -1.1px hsl(var(--shadow-color) / 0.29),
      3.8px 6px 7.9px -1.5px hsl(var(--shadow-color) / 0.29),
      6px 9.5px 12.6px -1.8px hsl(var(--shadow-color) / 0.29),
      9.1px 14.4px 19px -2.2px hsl(var(--shadow-color) / 0.29),
      13.4px 21.2px 28px -2.5px hsl(var(--shadow-color) / 0.29);
  }

  html {
    font-family: system-ui, sans-serif;
    -webkit-font-smoothing: antialiased;
  }
  code {
    font-family:
      Menlo,
      Monaco,
      Lucida Console,
      Liberation Mono,
      DejaVu Sans Mono,
      Bitstream Vera Sans Mono,
      Courier New,
      monospace;
  }
</style>
